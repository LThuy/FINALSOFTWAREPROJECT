<div class="text-center">
    <div class="container new-products bg-dark p-3">
        <h1 class="text-center text-info mt-5">New Products</h1>
        <div id="demo" class="carousel slide" data-ride="carousel">

            <!-- Indicators -->
            <ul class="carousel-indicators">
                <li data-target="#demo" data-slide-to="0" class="active"></li>
                <li data-target="#demo" data-slide-to="1"></li>
                <li data-target="#demo" data-slide-to="2"></li>
                <li data-target="#demo" data-slide-to="3"></li>
                <li data-target="#demo" data-slide-to="4"></li>
            </ul>
            <!-- The slideshow -->
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="~/css/images/1.jpeg " alt="" width="800" height="300" class="rounded">
                </div>
                <div class="carousel-item">
                    <img src="~/css/images/2.jpg" alt="" width="800" height="300" class="rounded">
                </div>
                <div class="carousel-item">
                    <img src="~/css/images/s22-ultra.jpg" alt="" width="800" height="300" class="rounded">
                </div>
                <div class="carousel-item">
                    <img src="~/css/images/4.jpg" alt="" width="800" height="300" class="rounded">
                </div>
                <div class="carousel-item">
                    <img src="~/css/images/5.jpg" alt="" width="800" height="300" class="rounded">
                </div>
            </div>

            <!-- Left and right controls -->
            <a class="carousel-control-prev" href="#demo" data-slide="prev">
                <span class="carousel-control-prev-icon"></span>
            </a>
            <a class="carousel-control-next" href="#demo" data-slide="next">
                <span class="carousel-control-next-icon"></span>
            </a>
        </div>
    </div>

    <div class="container our-products bg-light p-3 mt-5 mb-5">
        <h1 class="text-center mt-5">Our Products</h1>
        <div class="row row-cols-1 row-cols-md-3 g-4 mt-5">
        @foreach (var phone in Model.phones)
        {           
              <div class="col">
                    <div class="card h-70">
                        <img src="@phone.Image" class="card-img-top" alt="...">
                        <div class="card-body">
                            <h5 class="card-title" id="phone_name">@phone.Name</h5>
                            <p class="card-text">
                                <label class="text-danger font-weight-bold text-uppercase h5" id="phone_price">@phone.Price USD</label>
                                <div class="row r1">
                                    <div class="col-sm-2 font-weight-bold">
                                        <label>Memory: </label>
                                    </div>
                                    <div class="col-sm-6">
                                        <p id="phone_memory">@phone.Memory</p>
                                    </div>
                                    <div class="col-sm-4 text-success">
                                        <p> GB</p>
                                    </div>
                                </div>
                                <div class="row r2">
                                    <div class="col-sm-2 font-weight-bold">
                                        <label>Camera: </label>
                                    </div>
                                    <div class="col-sm-6">
                                        <p id="phone_camera">@phone.Camera</p>
                                    </div>
                                    <div class="col-sm-4 font-weight-bold text-success">
                                        <p> pixels</p>
                                    </div>
                                </div>
                                <div class="row r3">
                                    <div class="col-sm-2 font-weight-bold">
                                        <label>PIN:</label>
                                    </div>
                                    <div class="col-sm-6">
                                        <p id="phone_pin">@phone.Pin</p>
                                    </div>
                                    <div class="col-sm-4 font-weight-bold text-success">
                                        <p> mAh</p>
                                    </div>
                                </div>                             
                            </p>
                            <div class="Quantity-product">
                                <input type="number" name="number" min="0" max="10" value="0" id="quantity"/>
                            </div>
                            <button class="btn btn-primary mt-3" onclick="addToCart(this)">ADD TO CART</button>
                        </div>
                    </div>
                </div>            
        }
        </div>
    </div>
